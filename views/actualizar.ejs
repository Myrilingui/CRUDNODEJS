      <% if (user) { %>
        <div class="container ">
        <div class="card border secondary">
            <div class="card-header">Editar registro</div>
            <div class="card-body">
                <form action="/update" method="POST" class="row g-3">
                    <div class="col-md-4">
                        <label for="validationDefault01" class="form-label">ID</label>
                        <input type="text" class="form-control" id="ID" name="ID" value="<%= user.ID %>" required >
                      </div>
                    <div class="col-md-4">
                      <label for="validationDefault01" class="form-label">Titulo</label>
                      <input type="text" class="form-control" id="titulo" name="titulo" value="<%= user.titulo %>" required >
                    </div>
                    <div class="col-md-12">
                      <label for="validationDefault05" class="form-label">Imagen</label>
                      <input type="text" class="form-control" id="imagen" name="imagen" value="<%= user.imagen %>"required>
                    </div>
                    <div class="col-md-4">
                      <label for="validationDefault02" class="form-label">Descripcion</label>
                      <input type="text" class="form-control" id="descripcion" name="descripcion" value="<%= user.descripcion %>" required>
                    </div>
                    <div class="col-md-4">
                      <label for="validationDefaultUsername" class="form-label">Precio</label>
                      <div class="input-group">
                        <input type="text" class="form-control" id="precio" name="precio"  value="<%= user.precio %>" required>
                      </div>
                    </div>
                 
              
                   
                    <div class="col-1">
                      <button type="submit" class="btn btn-primary" >Guardar</button>
        
                    </div>
                    <div class="col-1">
                     
                      <a href="/nosotros" class="btn btn-secondary">cancelar</a>
                    </div>
                 
                  </form>
                </div>
                </div>
                </div>
             
